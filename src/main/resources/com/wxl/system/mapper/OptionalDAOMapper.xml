<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">


<mapper namespace="com.wxl.system.dao.OptionalDAO">

    <!--分页查询所有-->
    <select id="sfindByPage" resultType="Optional">
        select *
        from optional_tb
        order by cno
        limit #{start},#{rows}
    </select>

    <!--查询总条数-->
    <select id="findTotal" resultType="Integer">
        select count(cno) from optional_tb
    </select>

    <!--查询课程-->
    <select id="findByCno" resultType="Optional">
        select * from Optional_tb where cno = #{cno}
    </select>

    <!--学生选课-->
    <update id="update" parameterType="Optional">
        update optional_tb set number=number+1
        where cno=#{cno}
    </update>

    <!--插入单个课程-->
    <insert id="save" parameterType="Optional">
        insert into optional_tb values(#{cno},#{cname},#{credit},#{tname},#{place},#{number},#{max})
    </insert>

    <!--批量插入课程-->
    <insert id="addOptional" parameterType="List">
        insert into optional_tb values
        <foreach collection="list" item="optional" index="index" separator=",">
        (#{optional.cno},#{optional.cname},#{optional.credit},#{optional.tname},#{optional.place},#{optional.number},#{optional.max})
         </foreach>
    </insert>


</mapper>

